<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipsNTrip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_app</item>
        <item name="colorPrimaryVariant">@color/blue_app_darkest</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_app_darkest</item>
        <item name="colorSecondaryVariant">@color/blue_app_darker2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_app_darker1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TipsNTrip.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TextSpec">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextSpec.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Field.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSpec.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Heading1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/popping_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.TextDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:textStyle"></item>-->
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.LabelAttraction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:textStyle"></item>-->
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/popping_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="FloatingButtonStyle" parent="">
        <item name="backgroundTint">@color/blue_app_darker1</item>
    </style>

<!--    -->

</resources>